{% comment %}
  Broen — Join the Team + Contact Us (dark glass)
  - Section-scoped (uses "section.*")
  - Email pill matches your dark liquid-glass filter buttons
  - Background is editable; optional toggle to apply globally
  - No JS; accessible labels, focus rings, success/error messages
  - Hidden fields help identify the form source in your notification
{% endcomment %}

{% assign ai_gen_id = section.id | replace: '_', '' | downcase %}

{% if section.settings.apply_global_bg %}
  <style>
    /* Optional: paint the whole page (toggle in settings) */
    body, main, #MainContent { background: {{ section.settings.section_background }} !important; }
  </style>
{% endif %}

{% style %}
  /* Root wrapper with editable background */
  #ai-join-contact-{{ ai_gen_id }} {
    background: {{ section.settings.section_background }};
    color: {{ section.settings.text_color }};
    padding: {{ section.settings.section_padding }}px 20px;
  }

  .ai-join-contact__container-{{ ai_gen_id }} { max-width: {{ section.settings.max_width }}px; margin: 0 auto; }

  .ai-join-section-{{ ai_gen_id }} { text-align:center; margin-bottom: {{ section.settings.section_gap }}px; }

  .ai-join-heading-{{ ai_gen_id }}{
    font-size: {{ section.settings.heading_size_mobile }}px;
    font-weight: {{ section.settings.heading_weight }};
    margin: 0 0 {{ section.settings.heading_margin_bottom }}px 0;
    color: {{ section.settings.heading_color }};
    letter-spacing: {{ section.settings.heading_letter_spacing }};
    line-height: {{ section.settings.heading_line_height }};
    font-family: -apple-system,BlinkMacSystemFont,"SF Pro Display","SF Pro Text","Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif;
  }

  .ai-join-blurb-{{ ai_gen_id }}{
    margin: 0 0 {{ section.settings.blurb_margin_bottom }}px 0;
    line-height: {{ section.settings.text_line_height }};
    font-size: {{ section.settings.text_size }}px;
    color: {{ section.settings.text_color }};
  }

  /* === Email pill — dark liquid glass (matches filter pills) === */
  .ai-email-pill-{{ ai_gen_id }}{
    display:inline-flex; align-items:center; gap:8px; text-decoration:none;
    border-radius: {{ section.settings.button_border_radius }}px;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    font: 600 {{ section.settings.button_font_size }}px/1 -apple-system,BlinkMacSystemFont,"SF Pro Text","SF Pro Display","Segoe UI",Roboto,Arial,sans-serif;
    min-height: {{ section.settings.button_min_height }}px;
    color:#fff; text-shadow:0 1px 2px rgba(0,0,0,.8);
    border:none;
    backdrop-filter:saturate(180%) blur({{ section.settings.blur_amount }}px);
    -webkit-backdrop-filter:saturate(180%) blur({{ section.settings.blur_amount }}px);
    background:
      linear-gradient(135deg, rgba(60,60,60,.7) 0%, rgba(40,40,40,.85) 50%, rgba(30,30,30,.9) 100%),
      rgba(35,35,35,.8);
    box-shadow:
      inset 0 1px 0 rgba(255,255,255,.08),
      inset 0 -1px 0 rgba(0,0,0,.3),
      0 4px 12px rgba(0,0,0,.4),
      0 8px 24px rgba(0,0,0,.2);
    transition: all .2s ease;
  }
  .ai-email-pill-{{ ai_gen_id }}:hover{
    transform: translateY(-{{ section.settings.hover_lift }}px);
    background:
      linear-gradient(135deg, rgba(70,70,70,.75) 0%, rgba(50,50,50,.9) 50%, rgba(35,35,35,.95) 100%),
      rgba(40,40,40,.85);
    box-shadow:
      inset 0 1px 0 rgba(255,255,255,.12),
      inset 0 -1px 0 rgba(0,0,0,.25),
      0 6px 16px rgba(0,0,0,.5),
      0 12px 30px rgba(0,0,0,.3);
  }
  .ai-email-pill-{{ ai_gen_id }}:focus{ outline:2px solid {{ section.settings.focus_color }}; outline-offset:2px; }

  /* Contact card (glassy) */
  .ai-contact-card-{{ ai_gen_id }}{
    position:relative; overflow:hidden;
    background: {{ section.settings.card_bg }};
    border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border }};
    border-radius: {{ section.settings.card_border_radius }}px;
    padding: {{ section.settings.card_padding }}px;
    backdrop-filter: blur({{ section.settings.blur_amount }}px);
    -webkit-backdrop-filter: blur({{ section.settings.blur_amount }}px);
    box-shadow: {{ section.settings.card_shadow }};
  }
  .ai-contact-card-{{ ai_gen_id }}::before{
    content:""; position:absolute; top:0; left:0; right:0; height:1px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba({{ section.settings.card_border | color_extract: 'red' }}, {{ section.settings.card_border | color_extract: 'green' }}, {{ section.settings.card_border | color_extract: 'blue' }}, .6),
      transparent
    );
  }

  .ai-contact-heading-{{ ai_gen_id }}{
    font-size: {{ section.settings.contact_heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    margin: 0 0 {{ section.settings.contact_heading_margin }}px 0;
    text-align:center; color: {{ section.settings.heading_color }};
  }

  .ai-contact-form-{{ ai_gen_id }}{ display:flex; flex-direction:column; gap: {{ section.settings.form_gap }}px; }
  .ai-form-group-{{ ai_gen_id }}{ display:flex; flex-direction:column; gap: {{ section.settings.label_gap }}px; }

  .ai-form-label-{{ ai_gen_id }}{
    font-weight: {{ section.settings.label_font_weight }};
    color: {{ section.settings.label_color }};
    font-size: {{ section.settings.label_font_size }}px;
  }

  .ai-form-input-{{ ai_gen_id }},
  .ai-form-textarea-{{ ai_gen_id }}{
    padding: {{ section.settings.input_padding_y }}px {{ section.settings.input_padding_x }}px;
    background: {{ section.settings.input_bg }};
    border: {{ section.settings.input_border_width }}px solid {{ section.settings.input_border }};
    border-radius: {{ section.settings.input_border_radius }}px;
    color: {{ section.settings.input_text_color }};
    font-size: {{ section.settings.input_font_size }}px;
    outline: none;
    transition: all .25s ease;
    box-shadow: {{ section.settings.input_shadow }};
    backdrop-filter: blur({{ section.settings.blur_amount }}px);
    -webkit-backdrop-filter: blur({{ section.settings.blur_amount }}px);
  }
  .ai-form-input-{{ ai_gen_id }}::placeholder,
  .ai-form-textarea-{{ ai_gen_id }}::placeholder{ color: {{ section.settings.placeholder_color }}; }
  .ai-form-input-{{ ai_gen_id }}:focus,
  .ai-form-textarea-{{ ai_gen_id }}:focus{
    border-color: {{ section.settings.input_focus_border }};
    background: {{ section.settings.input_focus_bg }};
    box-shadow: 0 0 0 3px {{ section.settings.input_focus_ring }};
  }
  .ai-form-textarea-{{ ai_gen_id }}{ min-height: {{ section.settings.textarea_min_height }}px; resize: vertical; }

  .ai-submit-button-{{ ai_gen_id }}{
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    min-height: {{ section.settings.button_min_height }}px;
    border-radius: {{ section.settings.button_border_radius }}px;
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.submit_button_border }};
    background: {{ section.settings.submit_button_bg }};
    color: {{ section.settings.submit_button_text }};
    font: {{ section.settings.button_font_weight }} {{ section.settings.button_font_size }}px/1 -apple-system,BlinkMacSystemFont,"SF Pro Text","SF Pro Display","Segoe UI",Roboto,Arial,sans-serif;
    cursor:pointer; transition: all .2s ease;
    backdrop-filter: blur({{ section.settings.blur_amount }}px);
    -webkit-backdrop-filter: blur({{ section.settings.blur_amount }}px);
    box-shadow: {{ section.settings.button_shadow }};
    letter-spacing: {{ section.settings.heading_letter_spacing }};
  }
  .ai-submit-button-{{ ai_gen_id }}:hover{
    transform: translateY(-{{ section.settings.hover_lift }}px);
    background: {{ section.settings.submit_button_hover_bg }};
    color: {{ section.settings.submit_button_hover_text }};
    border-color: {{ section.settings.submit_button_hover_border }};
    box-shadow: {{ section.settings.button_hover_shadow }};
  }
  .ai-submit-button-{{ ai_gen_id }}:focus{ outline:2px solid {{ section.settings.focus_color }}; outline-offset:2px; }

  .ai-form-message-{{ ai_gen_id }}{
    margin-top:16px; padding: {{ section.settings.message_padding }}px;
    border-radius: {{ section.settings.input_border_radius }}px;
    font-size: {{ section.settings.message_font_size }}px; font-weight:500;
  }
  .ai-form-success-{{ ai_gen_id }}{ background: {{ section.settings.success_bg }}; border:1px solid {{ section.settings.success_border }}; color: {{ section.settings.success_text }}; }
  .ai-form-error-{{ ai_gen_id }}  { background: {{ section.settings.error_bg }};   border:1px solid {{ section.settings.error_border }};   color: {{ section.settings.error_text }}; }

  @media (min-width:768px){ .ai-join-heading-{{ ai_gen_id }}{ font-size: {{ section.settings.heading_size_desktop }}px; } }
  @media (max-width:768px){
    #ai-join-contact-{{ ai_gen_id }}{ padding: {{ section.settings.section_padding | times: 0.7 }}px 16px; }
    .ai-contact-card-{{ ai_gen_id }}{ padding: {{ section.settings.card_padding | times: 0.75 }}px; }
    .ai-form-input-{{ ai_gen_id }}, .ai-form-textarea-{{ ai_gen_id }}{ padding: {{ section.settings.input_padding_y | times: 0.85 }}px {{ section.settings.input_padding_x | times: 0.85 }}px; }
    .ai-email-pill-{{ ai_gen_id }}, .ai-submit-button-{{ ai_gen_id }}{ padding: {{ section.settings.button_padding_y | times: 0.85 }}px {{ section.settings.button_padding_x | times: 0.85 }}px; }
  }

  /* Fallback for browsers without backdrop-filter */
  @supports not ((-webkit-backdrop-filter: none) or (backdrop-filter: none)){
    .ai-email-pill-{{ ai_gen_id }}{ background: rgba(45,45,47,.92); box-shadow: 0 8px 20px rgba(0,0,0,.35); }
    .ai-contact-card-{{ ai_gen_id }}, .ai-form-input-{{ ai_gen_id }}, .ai-form-textarea-{{ ai_gen_id }}, .ai-submit-button-{{ ai_gen_id }}{
      -webkit-backdrop-filter:none; backdrop-filter:none;
    }
  }

  /* Editor QoL + motion/contrast */
  @media (prefers-reduced-motion: reduce){ .ai-email-pill-{{ ai_gen_id }}, .ai-submit-button-{{ ai_gen_id }}, .ai-form-input-{{ ai_gen_id }}, .ai-form-textarea-{{ ai_gen_id }}{ transition:none; } }
  @media (prefers-contrast: high){ .ai-contact-card-{{ ai_gen_id }}, .ai-form-input-{{ ai_gen_id }}, .ai-form-textarea-{{ ai_gen_id }}, .ai-email-pill-{{ ai_gen_id }}, .ai-submit-button-{{ ai_gen_id }}{ border-width:2px; } }
{% endstyle %}

{% if request.design_mode %}
  <style>
    /* Ensure inputs are interactive while customizing */
    .shopify-design-mode #ai-join-contact-{{ ai_gen_id }} input,
    .shopify-design-mode #ai-join-contact-{{ ai_gen_id }} textarea,
    .shopify-design-mode #ai-join-contact-{{ ai_gen_id }} button { pointer-events:auto !important; }
  </style>
{% endif %}

<section id="ai-join-contact-{{ ai_gen_id }}" {{ section.shopify_attributes }}>
  <div class="ai-join-contact__container-{{ ai_gen_id }}">
    <div class="ai-join-section-{{ ai_gen_id }}">
      {% if section.settings.join_heading != blank %}
        <h2 class="ai-join-heading-{{ ai_gen_id }}">{{ section.settings.join_heading }}</h2>
      {% endif %}

      {% if section.settings.join_blurb != blank %}
        <div class="ai-join-blurb-{{ ai_gen_id }}">{{ section.settings.join_blurb }}</div>
      {% endif %}

      {% if section.settings.join_email != blank %}
        <a href="mailto:{{ section.settings.join_email }}" class="ai-email-pill-{{ ai_gen_id }}">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
          </svg>
          {{ section.settings.join_email }}
        </a>
      {% endif %}
    </div>

    <div class="ai-contact-card-{{ ai_gen_id }}">
      {% if section.settings.contact_heading != blank %}
        <h3 class="ai-contact-heading-{{ ai_gen_id }}">{{ section.settings.contact_heading }}</h3>
      {% endif %}

      {% form 'contact' %}
        <div class="ai-contact-form-{{ ai_gen_id }}" aria-live="polite">
          <div class="ai-form-group-{{ ai_gen_id }}">
            <label for="contact-name-{{ ai_gen_id }}" class="ai-form-label-{{ ai_gen_id }}">{{ section.settings.name_label }}</label>
            <input id="contact-name-{{ ai_gen_id }}" class="ai-form-input-{{ ai_gen_id }}"
              type="text" name="contact[name]" value="{{ form.name }}" placeholder="{{ section.settings.name_placeholder }}"
              required aria-required="true" autocomplete="name">
          </div>

          <div class="ai-form-group-{{ ai_gen_id }}">
            <label for="contact-email-{{ ai_gen_id }}" class="ai-form-label-{{ ai_gen_id }}">{{ section.settings.email_label }}</label>
            <input id="contact-email-{{ ai_gen_id }}" class="ai-form-input-{{ ai_gen_id }}"
              type="email" name="contact[email]" value="{{ form.email }}" placeholder="{{ section.settings.email_placeholder }}"
              required aria-required="true" autocomplete="email">
          </div>

          {% if section.settings.show_phone %}
            <div class="ai-form-group-{{ ai_gen_id }}">
              <label for="contact-phone-{{ ai_gen_id }}" class="ai-form-label-{{ ai_gen_id }}">{{ section.settings.phone_label }}</label>
              <input id="contact-phone-{{ ai_gen_id }}" class="ai-form-input-{{ ai_gen_id }}"
                type="tel" name="contact[phone]" value="{{ form.phone }}" placeholder="{{ section.settings.phone_placeholder }}" autocomplete="tel">
            </div>
          {% endif %}

          <div class="ai-form-group-{{ ai_gen_id }}">
            <label for="contact-message-{{ ai_gen_id }}" class="ai-form-label-{{ ai_gen_id }}">{{ section.settings.message_label }}</label>
            <textarea id="contact-message-{{ ai_gen_id }}" class="ai-form-textarea-{{ ai_gen_id }}"
              name="contact[body]" placeholder="{{ section.settings.message_placeholder }}" required aria-required="true">{{ form.body }}</textarea>
          </div>

          <!-- Identify source in email notification -->
          <input type="hidden" name="contact[form_name]" value="Join + Contact (section {{ section.id }})">
          <input type="hidden" name="contact[url]" value="{{ request.path }}">

          <button type="submit" class="ai-submit-button-{{ ai_gen_id }}">{{ section.settings.submit_label }}</button>
        </div>

        {% if form.posted_successfully? %}
          <div class="ai-form-message-{{ ai_gen_id }} ai-form-success-{{ ai_gen_id }}">{{ section.settings.success_message }}</div>
        {% endif %}
        {% if form.errors %}
          <div class="ai-form-message-{{ ai_gen_id }} ai-form-error-{{ ai_gen_id }}">
            {% for field in form.errors %}{{ field | capitalize }} {{ form.errors.messages[field] }}.{% endfor %}
          </div>
        {% endif %}
      {% endform %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Broen — Join team",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "header", "content": "Content" },
    { "type": "text", "id": "join_heading", "label": "Join heading", "default": "Join the Team" },
    { "type": "richtext", "id": "join_blurb", "label": "Join description", "default": "<p>Send an email to broen.philippines@gmail.com along with your CV/Resume</p>" },
    { "type": "text", "id": "join_email", "label": "Email address", "default": "broen.philippines@gmail.com" },
    { "type": "text", "id": "contact_heading", "label": "Contact heading", "default": "Contact Us" },

    { "type": "header", "content": "Form labels & placeholders" },
    { "type": "text", "id": "name_label", "label": "Name label", "default": "Name *" },
    { "type": "text", "id": "name_placeholder", "label": "Name placeholder", "default": "Your full name" },
    { "type": "text", "id": "email_label", "label": "Email label", "default": "Email *" },
    { "type": "text", "id": "email_placeholder", "label": "Email placeholder", "default": "your.email@example.com" },
    { "type": "text", "id": "phone_label", "label": "Phone label", "default": "Phone" },
    { "type": "text", "id": "phone_placeholder", "label": "Phone placeholder", "default": "+63 912 345 6789" },
    { "type": "text", "id": "message_label", "label": "Message label", "default": "Message *" },
    { "type": "text", "id": "message_placeholder", "label": "Message placeholder", "default": "Tell us how we can help you..." },
    { "type": "text", "id": "submit_label", "label": "Submit button text", "default": "Send" },
    { "type": "text", "id": "success_message", "label": "Success message", "default": "Thank you for your message! We'll get back to you soon." },
    { "type": "checkbox", "id": "show_phone", "label": "Show phone field", "default": false },

    { "type": "header", "content": "Layout" },
    { "type": "range", "id": "max_width", "min": 600, "max": 1000, "step": 20, "unit": "px", "label": "Maximum width", "default": 720 },
    { "type": "range", "id": "section_padding", "min": 40, "max": 120, "step": 10, "unit": "px", "label": "Section padding", "default": 60 },
    { "type": "range", "id": "section_gap", "min": 30, "max": 80, "step": 5, "unit": "px", "label": "Gap between sections", "default": 40 },
    { "type": "range", "id": "form_gap", "min": 15, "max": 30, "step": 1, "unit": "px", "label": "Form field gap", "default": 20 },
    { "type": "range", "id": "label_gap", "min": 4, "max": 12, "step": 1, "unit": "px", "label": "Label to input gap", "default": 8 },

    { "type": "header", "content": "Typography" },
    { "type": "range", "id": "heading_size_mobile", "min": 24, "max": 40, "step": 2, "unit": "px", "label": "Mobile heading size", "default": 32 },
    { "type": "range", "id": "heading_size_desktop", "min": 32, "max": 48, "step": 2, "unit": "px", "label": "Desktop heading size", "default": 36 },
    { "type": "select", "id": "heading_weight", "label": "Heading weight", "options": [
      { "value": "400", "label": "Normal" }, { "value": "500", "label": "Medium" },
      { "value": "600", "label": "Semi Bold" }, { "value": "700", "label": "Bold" }
    ], "default": "600" },
    { "type": "range", "id": "heading_line_height", "min": 1.0, "max": 1.5, "step": 0.1, "label": "Heading line height", "default": 1.2 },
    { "type": "select", "id": "heading_letter_spacing", "label": "Heading letter spacing", "options": [
      { "value": "-0.02em", "label": "Tight" }, { "value": "-0.01em", "label": "Slightly tight" },
      { "value": "0", "label": "Normal" }, { "value": "0.01em", "label": "Slightly loose" }
    ], "default": "-0.01em" },
    { "type": "range", "id": "heading_margin_bottom", "min": 10, "max": 30, "step": 2, "unit": "px", "label": "Heading bottom margin", "default": 20 },
    { "type": "range", "id": "contact_heading_size", "min": 20, "max": 32, "step": 2, "unit": "px", "label": "Contact heading size", "default": 24 },
    { "type": "range", "id": "contact_heading_margin", "min": 16, "max": 32, "step": 2, "unit": "px", "label": "Contact heading margin", "default": 24 },
    { "type": "range", "id": "text_size", "min": 14, "max": 20, "step": 1, "unit": "px", "label": "Body text size", "default": 16 },
    { "type": "range", "id": "text_line_height", "min": 1.4, "max": 1.8, "step": 0.1, "label": "Body text line height", "default": 1.6 },
    { "type": "range", "id": "blurb_margin_bottom", "min": 15, "max": 30, "step": 1, "unit": "px", "label": "Blurb bottom margin", "default": 20 },

    { "type": "header", "content": "Colors" },
    { "type": "color", "id": "section_background", "label": "Section background", "default": "#0E1116" },
    { "type": "checkbox", "id": "apply_global_bg", "label": "Apply background to whole page", "default": false },
    { "type": "color", "id": "heading_color", "label": "Heading color", "default": "#FFFFFF" },
    { "type": "color", "id": "text_color", "label": "Text color", "default": "#FFFFFF" },
    { "type": "color", "id": "label_color", "label": "Label color", "default": "#FFFFFF" },
    { "type": "color", "id": "placeholder_color", "label": "Placeholder color", "default": "#A8B0BB" },
    { "type": "color", "id": "focus_color", "label": "Focus outline color", "default": "#FFFFFF" },

    { "type": "header", "content": "Card styling" },
    { "type": "color", "id": "card_bg", "label": "Card background", "default": "rgba(22, 27, 34, 0.8)" },
    { "type": "color", "id": "card_border", "label": "Card border", "default": "rgba(42, 48, 59, 0.4)" },
    { "type": "range", "id": "card_border_width", "min": 1, "max": 3, "step": 1, "unit": "px", "label": "Card border width", "default": 1 },
    { "type": "range", "id": "card_border_radius", "min": 8, "max": 24, "step": 2, "unit": "px", "label": "Card border radius", "default": 16 },
    { "type": "range", "id": "card_padding", "min": 20, "max": 40, "step": 2, "unit": "px", "label": "Card padding", "default": 32 },
    { "type": "text", "id": "card_shadow", "label": "Card shadow", "default": "0 4px 24px rgba(0, 0, 0, 0.1)" },

    { "type": "header", "content": "Input styling" },
    { "type": "color", "id": "input_bg", "label": "Input background", "default": "rgba(22, 27, 34, 0.6)" },
    { "type": "color", "id": "input_border", "label": "Input border", "default": "rgba(42, 48, 59, 0.4)" },
    { "type": "color", "id": "input_text_color", "label": "Input text color", "default": "#FFFFFF" },
    { "type": "color", "id": "input_focus_bg", "label": "Input focus background", "default": "rgba(22, 27, 34, 0.8)" },
    { "type": "color", "id": "input_focus_border", "label": "Input focus border", "default": "rgba(255, 255, 255, 0.6)" },
    { "type": "color", "id": "input_focus_ring", "label": "Input focus ring", "default": "rgba(255, 255, 255, 0.1)" },
    { "type": "range", "id": "input_border_width", "min": 1, "max": 3, "step": 1, "unit": "px", "label": "Input border width", "default": 1 },
    { "type": "range", "id": "input_border_radius", "min": 6, "max": 16, "step": 2, "unit": "px", "label": "Input border radius", "default": 12 },
    { "type": "range", "id": "input_padding_y", "min": 10, "max": 18, "step": 2, "unit": "px", "label": "Input vertical padding", "default": 14 },
    { "type": "range", "id": "input_padding_x", "min": 12, "max": 20, "step": 2, "unit": "px", "label": "Input horizontal padding", "default": 16 },
    { "type": "range", "id": "input_font_size", "min": 14, "max": 18, "step": 1, "unit": "px", "label": "Input font size", "default": 16 },
    { "type": "range", "id": "label_font_size", "min": 12, "max": 16, "step": 1, "unit": "px", "label": "Label font size", "default": 14 },
    { "type": "select", "id": "label_font_weight", "label": "Label font weight", "options": [
