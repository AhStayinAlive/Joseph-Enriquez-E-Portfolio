  const newsItems = document.querySelectorAll('.news-item');
  const consultationBtn = document.getElementById('consultationBtn');
  
  let newsCurrentIndex = 0;
  const newsTotalItems = newsItems.length;
  
  function showNewsItem(index) {
    newsItems.forEach((item, i) => {
      item.classList.remove('active');
    });
    
    if (newsItems[index]) {
      newsItems[index].classList.add('active');
    }
  }
  
  function nextNewsItem() {
    newsCurrentIndex = (newsCurrentIndex + 1) % newsTotalItems;
    showNewsItem(newsCurrentIndex);
  }
  
  consultationBtn?.addEventListener('click', function() {
    console.log('Free Door Consultation requested');
  });
  
  document.querySelectorAll('.news-link').forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      console.log('News link clicked:', e.target.textContent);
    });
  });
  
  let newsAutoPlay = setInterval(nextNewsItem, 5000);
  
  const newsSection = document.querySelector('.news-announcement-section');
  newsSection?.addEventListener('mouseenter', () => clearInterval(newsAutoPlay));
  newsSection?.addEventListener('mouseleave', () => {
    newsAutoPlay = setInterval(nextNewsItem, 5000);
  });
  
  console.log('✅ News announcement initialized');

  // === UNIVERSAL CAROUSEL FUNCTION ===
  function initializeCarousel(sectionClass, trackId, prevId, nextId, totalItems, cardWidth) {
    const track = document.getElementById(trackId);
    const prevBtn = document.getElementById(prevId);
    const nextBtn = document.getElementById(nextId);
    const dots = document.querySelectorAll(`${sectionClass} .dot`);
    
    let current = 0;
    let isTransitioning = false;
    
    function updateDisplay() {
      if (!track || isTransitioning) return;
      
      isTransitioning = true;
      const translateX = -(current * cardWidth);
      track.style.transform = `translateX(${translateX}px)`;
      
      setTimeout(() => {
        if (current >= totalItems) {
          current = 0;
          track.style.transition = 'none';
          track.style.transform = `translateX(0px)`;
          setTimeout(() => {
            track.style.transition = 'transform 0.6s cubic-bezier(0.16, 1, 0.3, 1)';
          }, 50);
        }
        
        dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === current);
        });
        
        isTransitioning = false;
      }, 600);
    }
    
    function next() {
      if (isTransitioning) return;
      current++;
      updateDisplay();
    }
    
    function prev() {
      if (isTransitioning) return;
      if (current === 0) {
        current = totalItems - 1;
      } else {
        current--;
      }
      updateDisplay();
    }
    
    prevBtn?.addEventListener('click', prev);
    nextBtn?.addEventListener('click', next);
    
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        if (isTransitioning) return;
        current = index;
        updateDisplay();
      });
    });
    
    // Wheel scrolling
    const viewport = document.querySelector(`${sectionClass} .carousel-viewport`);
    if (viewport && window.innerWidth > 768) {
      viewport.addEventListener('wheel', function(e) {
        if (e.deltaY !== 0) {
          e.preventDefault();
          if (e.deltaY > 0) {
            next();
          } else {
            prev();
          }
        }
      }, { passive: false });
    }
    
    // Auto-play
    let autoPlay = setInterval(next, 5000);
    
    const section = document.querySelector(sectionClass);
    section?.addEventListener('mouseenter', () => clearInterval(autoPlay));
    section?.addEventListener('mouseleave', () => {
      autoPlay = setInterval(next, 5000);
    });
    
    return { next, prev, updateDisplay };
  }
  
  // Initialize all carousels
  initializeCarousel('.broen-standard-section', 'broenTrack', 'broenPrev', 'broenNext', 4, 352);
  initializeCarousel('.how-it-works-section', 'worksTrack', 'worksPrev', 'worksNext', 5, 352);
  initializeCarousel('.our-clients-section', 'clientsTrack', 'clientsPrev', 'clientsNext', 5, 352);
  initializeCarousel('.which-lock-section', 'lockTrack', 'lockPrev', 'lockNext', 5, 352);
  
