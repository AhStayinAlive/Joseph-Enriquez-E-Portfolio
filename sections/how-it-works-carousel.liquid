  });
  
  document.querySelectorAll('.client-card').forEach(card => {
    card.addEventListener('click', function() {
      const product = this.dataset.product;
      console.log(`Client clicked - redirecting to ${product} product page`);
      // Here you would redirect to the product page
      // window.location.href = `/products/${product}`;
    });
  });
  
  // Lock product card handlers
  document.querySelectorAll('.lock-product-card').forEach(card => {
    card.addEventListener('click', function(e) {
      // Don't trigger if clicking on the add to cart button
      if (e.target.closest('.add-to-cart-button')) {
        return;
      }
      
      const product = this.dataset.product;
      console.log(`Lock product clicked - viewing ${product} details`);
      // Redirect to product page
