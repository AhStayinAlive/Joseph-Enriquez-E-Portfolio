<script>
document.addEventListener('DOMContentLoaded', function() {
  // Smooth scroll on wheel for horizontal containers
  document.querySelectorAll('.which-lock .carousel-scroll-container').forEach(container => {
    container.addEventListener('wheel', function(e) {
      if (e.deltaY !== 0) {
        e.preventDefault();
        this.scrollLeft += e.deltaY;
      }
    });
  });
  
  // Enhanced Add to Cart functionality for lock cards
  document.querySelectorAll('.which-lock .add-to-cart-btn').forEach(btn => {
    btn.addEventListener('click', function(e) {
      e.stopPropagation();
      const productId = this.getAttribute('data-product');
      
      // Add to cart functionality
      if (typeof addToCart === 'function') {
        addToCart(productId);
      } else {
        console.log(`Adding to cart: ${productId}`);
        
        // Visual feedback
        const originalText = this.textContent;
        this.textContent = 'Added to cart ✓';
        this.style.background = 'rgba(76, 175, 80, 0.9)';
        this.style.borderColor = '#4caf50';
        this.style.color = '#ffffff';
        
        setTimeout(() => {
          this.textContent = originalText;
          this.style.background = '';
          this.style.borderColor = '';
          this.style.color = '';
        }, 2000);
      }
    });
  });
  
  // View all products links
  document.querySelectorAll('.which-lock .see-all-link').forEach(link => {
    link.addEventListener('click', function(e) {
      // Analytics tracking
      if (typeof gtag === 'function') {
        gtag('event', 'click', {
          event_category: 'navigation',
          event_label: 'view_all_products_from_lock_carousel'
        });
      }
    });
  });
  
  // Lock card click handling (for product details)
  document.querySelectorAll('.which-lock .lock-card').forEach(card => {
    card.addEventListener('click', function(e) {
      // Don't trigger if clicking on buttons/links
      if (e.target.closest('.add-to-cart-btn, .see-all-link')) {
        return;
      }
      
      const productName = this.querySelector('.product-name')?.textContent;
      
      // Handle product detail view
      console.log(`Viewing product details: ${productName}`);
      
      // You can add product detail modal or navigation here
      if (typeof showProductDetails === 'function') {
        showProductDetails(productName);
      }
    });
  });
});
</script>