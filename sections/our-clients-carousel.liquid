<script>
document.addEventListener('DOMContentLoaded', function() {
  // Smooth scroll on wheel for horizontal containers
  document.querySelectorAll('.our-clients .carousel-scroll-container').forEach(container => {
    container.addEventListener('wheel', function(e) {
      if (e.deltaY !== 0) {
        e.preventDefault();
        this.scrollLeft += e.deltaY;
      }
    });
  });
  
  // View Project button functionality
  document.querySelectorAll('.our-clients .view-project-btn').forEach(btn => {
    btn.addEventListener('click', function(e) {
      e.stopPropagation();
      const projectId = this.getAttribute('data-project');
      
      // Handle project viewing functionality
      if (typeof viewClientProject === 'function') {
        viewClientProject(projectId);
      } else {
        console.log(`Viewing client project: ${projectId}`);
        
        // You can add project detail modal or navigation here
        // For now, let's show a temporary notification
        const originalText = this.textContent;
        this.textContent = 'Opening Project...';
        this.style.opacity = '0.7';
        
        setTimeout(() => {
          this.textContent = originalText;
          this.style.opacity = '';
          // You could navigate to a project detail page here
          // window.location.href = `/projects/${projectId}`;
        }, 1500);
      }
    });
  });
  
  // Client card click handling (for detailed testimonial view)
  document.querySelectorAll('.our-clients .client-card').forEach(card => {
    card.addEventListener('click', function(e) {
      // Don't trigger if clicking on the button
      if (e.target.closest('.view-project-btn')) {
        return;
      }
      
      const clientName = this.querySelector('.client-name')?.textContent;
      const productName = this.querySelector('.product-name')?.textContent;
      const location = this.querySelector('.location-badge')?.textContent;
      
      // Handle testimonial detail view
      console.log(`Viewing testimonial from ${clientName} for ${productName} in ${location}`);
      
      // You can add testimonial modal or detailed view here
      if (typeof showTestimonialDetails === 'function') {
        showTestimonialDetails({
          client: clientName,
          product: productName,
          location: location,
          quote: this.querySelector('.client-quote')?.textContent
        });
      }
    });
  });
  
  // Scroll animations
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.opacity = '1';
        entry.target.style.transform = 'translateY(0)';
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll('.our-clients .client-card').forEach((card, index) => {
    card.style.opacity = '0';
    card.style.transform = 'translateY(20px)';
    card.style.transition = `opacity 0.5s ease ${index * 0.1}s, transform 0.5s ease ${index * 0.1}s`;
    observer.observe(card);
  });
  
  // Touch scroll enhancement for mobile
  let isDown = false;
  let startX;
  let scrollLeft;
  
  document.querySelectorAll('.our-clients .carousel-scroll-container').forEach(container => {
    container.addEventListener('mousedown', (e) => {
      isDown = true;
      container.classList.add('active');
      startX = e.pageX - container.offsetLeft;
      scrollLeft = container.scrollLeft;
    });
    
    container.addEventListener('mouseleave', () => {
      isDown = false;
      container.classList.remove('active');
    });
    
    container.addEventListener('mouseup', () => {
      isDown = false;
      container.classList.remove('active');
    });
    
    container.addEventListener('mousemove', (e) => {
      if (!isDown) return;
      e.preventDefault();
      const x = e.pageX - container.offsetLeft;
      const walk = (x - startX) * 2;
      container.scrollLeft = scrollLeft - walk;
    });
  });
  
  // Analytics tracking for client testimonials
  document.querySelectorAll('.our-clients .client-card').forEach(card => {
    card.addEventListener('click', function() {
      if (typeof gtag === 'function') {
        gtag('event', 'click', {
          event_category: 'testimonials',
          event_label: 'client_testimonial_view'
        });
      }
    });
  });
