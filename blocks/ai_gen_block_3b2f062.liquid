{% comment %}
  PRODUCT CAROUSEL - REFINED VERSION
  - Sophisticated spacing and proportions
  - Brown door classification pills
  - Better button sizing and layout
  - More Apple-inspired design
{% endcomment %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-carousel-{{ ai_gen_id }} {
    background: {{ block.settings.background_color | default: '#000000' }};
    background: linear-gradient(180deg, {{ block.settings.background_color | default: '#000000' }} 0%, {{ block.settings.background_color | default: '#000000' | color_darken: 5 }} 100%);
    padding-top: {{ block.settings.section_padding_top | default: 80 }}px;
    padding-bottom: {{ block.settings.section_padding | default: 60 }}px;
    overflow: hidden;
    width: 100%;
    position: relative;
  }

  .ai-product-carousel-{{ ai_gen_id }}::before {
    content: '';
    position: absolute; inset: 0;
    background: linear-gradient(
      135deg,
      {{ block.settings.background_color | default: '#000000' | color_modify: 'alpha', 0.95 }} 0%,
      {{ block.settings.background_color | default: '#000000' | color_darken: 8 | color_modify: 'alpha', 0.98 }} 50%,
      {{ block.settings.background_color | default: '#000000' | color_darken: 3 | color_modify: 'alpha', 0.95 }} 100%
    );
    z-index: 1;
  }

  .ai-product-carousel__container-{{ ai_gen_id }} {
    width: 100%;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 2;
  }

  .ai-product-carousel__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color | default: '#ffffff' }};
    font-size: clamp({{ block.settings.heading_size | default: 32 | minus: 8 }}px, 5vw, {{ block.settings.heading_size | default: 32 }}px);
    font-weight: 700;
    text-align: center;
    margin: 0 0 {{ block.settings.heading_spacing | default: 48 }}px;
    letter-spacing: -0.02em;
    line-height: 1.1;
    position: relative;
  }
  .ai-product-carousel__heading-{{ ai_gen_id }}::after {
    content: '';
    position: absolute; bottom: -20px; left: 50%; transform: translateX(-50%);
    width: 80px; height: 2px;
    background: linear-gradient(90deg, transparent, {{ block.settings.heading_color | default: '#ffffff' | color_modify: 'alpha', 0.8 }}, transparent);
  }

  .ai-product-carousel__wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: visible;
    margin: 0;
    padding: 20px 0 40px 0;
  }

  .ai-product-carousel__track-container-{{ ai_gen_id }} {
    position: relative;
    overflow: visible;
    margin: 0 80px;
    border-radius: 20px;
  }

  .ai-product-carousel__track-{{ ai_gen_id }} {
    display: flex;
    gap: 20px;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    will-change: transform;
    padding: 0 20px;
  }

  .ai-product-carousel__card-{{ ai_gen_id }} {
    flex: 0 0 auto;
    width: calc((100% - ({{ block.settings.cards_per_view_desktop | default: 3 | minus: 1 }} * 20px)) / {{ block.settings.cards_per_view_desktop | default: 3 }});
    min-width: 280px;
    height: 580px;
    background: {{ block.settings.card_background | default: '#3d3d3d' | color_modify: 'alpha', 0.95 }};
    border: 1px solid {{ block.settings.card_background | default: '#3d3d3d' | color_lighten: 20 | color_modify: 'alpha', 0.1 }};
    border-radius: {{ block.settings.card_border_radius | default: 16 }}px;
    box-shadow: 0 8px 32px {{ block.settings.card_background | default: '#000000' | color_modify: 'alpha', 0.4 }};
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    cursor: pointer;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    will-change: transform;
    position: relative;
  }

  .ai-product-carousel__card-{{ ai_gen_id }}:hover {
    transform: translateY(-6px) scale(1.015);
    border-color: {{ block.settings.card_background | default: '#3d3d3d' | color_lighten: 40 | color_modify: 'alpha', 0.3 }};
    box-shadow: 0 20px 60px {{ block.settings.card_background | default: '#000000' | color_modify: 'alpha', 0.6 }};
    background: {{ block.settings.card_background | default: '#3d3d3d' | color_lighten: 5 | color_modify: 'alpha', 0.98 }};
  }

  .ai-product-carousel__card-media-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 320px;
    background: linear-gradient(135deg, {{ block.settings.card_background | default: '#3d3d3d' | color_lighten: 10 }} 0%, {{ block.settings.card_background | default: '#3d3d3d' | color_darken: 5 }} 100%);
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 24px;
  }

  .ai-product-carousel__card-media-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    border-radius: 12px;
  }
  .ai-product-carousel__card-{{ ai_gen_id }}:hover .ai-product-carousel__card-media-{{ ai_gen_id }} img {
    transform: scale(1.05);
  }

  .ai-product-carousel__card-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, {{ block.settings.card_background | default: '#3d3d3d' | color_lighten: 15 }} 0%, {{ block.settings.card_background | default: '#3d3d3d' | color_lighten: 5 }} 100%);
    border-radius: 12px;
    display: flex; align-items: center; justify-content: center;
    font-size: 14px; font-weight: 500;
    color: {{ block.settings.card_text_color | default: '#ffffff' | color_modify: 'alpha', 0.6 }};
    text-align: center;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    border: 1px solid {{ block.settings.card_background | default: '#3d3d3d' | color_lighten: 20 | color_modify: 'alpha', 0.1 }};
  }
  .ai-product-carousel__card-{{ ai_gen_id }}:hover .ai-product-carousel__card-placeholder-{{ ai_gen_id }} {
    transform: scale(1.05);
  }
  .ai-product-carousel__card-placeholder-{{ ai_gen_id }} svg {
    width: 48px; height: 48px; opacity: 0.4;
    fill: {{ block.settings.card_text_color | default: '#ffffff' | color_modify: 'alpha', 0.5 }};
  }

  .ai-product-carousel__card-content-{{ ai_gen_id }} {
    padding: 24px 20px 20px 20px;
    display: flex; 
    flex-direction: column; 
    flex-grow: 1;
    position: relative;
  }

  .ai-product-carousel__product-name-{{ ai_gen_id }} {
    color: {{ block.settings.card_text_color | default: '#ffffff' }};
    font-size: 20px; 
    font-weight: 700;
    margin: 0 0 16px 0;
    line-height: 1.3; 
    letter-spacing: -0.01em;
    padding-right: 80px;
  }

  /* Brown Door Classification Pill - Top Right Position */
  .ai-product-carousel__door-classification-{{ ai_gen_id }} {
    position: absolute;
    top: 24px;
    right: 20px;
    font-size: 11px;
    font-weight: 600;
    color: #deb887;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    padding: 6px 12px;
    background: rgba(97,69,36,.4);
    border: 1px solid rgba(97,69,36,.6);
    border-radius: 16px;
    backdrop-filter: blur(10px);
    margin: 0;
    white-space: nowrap;
  }

  .ai-product-carousel__price-{{ ai_gen_id }} {
    color: {{ block.settings.card_text_color | default: '#ffffff' }};
    font-size: 24px; 
    font-weight: 700;
    margin: 0 0 20px 0;
    letter-spacing: -0.02em;
  }

  .ai-product-carousel__button-group-{{ ai_gen_id }} {
    display: flex; 
    flex-direction: row;
    gap: 12px; 
    margin-top: auto;
  }

  /* Liquid-glass pill (ATC) */
  .ai-pc-glass-btn-{{ ai_gen_id }}{
    display: inline-flex; 
    align-items: center; 
    justify-content: center;
    flex: 1;
    min-height: 44px; 
    padding: 12px 16px;
    border-radius: 100px;
    border: 1px solid hsla(0,0%,100%,.22);
    color: #fff; 
    font-weight: 600; 
    font-size: 13px;
    background: linear-gradient(0deg,rgba(255,255,255,.18),rgba(255,255,255,.18));
    backdrop-filter: saturate(180%) blur(18px);
    -webkit-backdrop-filter: saturate(180%) blur(18px);
    box-shadow: 0 4px 12px rgba(0,0,0,.25), inset 0 1px 0 rgba(255,255,255,.12);
    text-decoration: none; 
    text-align: center;
    transition: all .2s; 
    cursor: pointer;
  }
  .ai-pc-glass-btn-{{ ai_gen_id }}:hover{
    transform: translateY(-1px);
    background: linear-gradient(0deg,rgba(255,255,255,.24),rgba(255,255,255,.24));
    box-shadow: 0 6px 16px rgba(0,0,0,.3), inset 0 1px 0 rgba(255,255,255,.14);
  }
  .ai-pc-glass-btn-{{ ai_gen_id }}[disabled]{ 
    opacity: .5; 
    cursor: not-allowed; 
  }

  /* Buy Now: Apple iMessage Blue */
  .ai-product-carousel__buy-now-btn-{{ ai_gen_id }} {
    flex: 1;
    min-height: 44px;
    background: #007aff;
    color: #ffffff;
    border: none;
    padding: 12px 16px;
    border-radius: 100px;
    font-size: 13px; 
    font-weight: 700;
    display: inline-flex; 
    align-items: center; 
    justify-content: center;
    text-decoration: none; 
    text-align: center;
    transition: all 0.2s ease;
    box-shadow: 0 4px 12px rgba(0, 122, 255, 0.35);
  }
  .ai-product-carousel__buy-now-btn-{{ ai_gen_id }}:hover {
    background: #0a66ff;
    transform: translateY(-1px);
    box-shadow: 0 6px 16px rgba(0, 122, 255, 0.45);
  }

  /* See All Products Link */
  .ai-product-carousel__see-all-{{ ai_gen_id }} {
    display: block;
    color: rgba(255, 255, 255, 0.6);
    font-size: 11px;
    font-weight: 500;
    text-decoration: none;
    text-align: center;
    margin-top: 12px;
    transition: all 0.2s ease;
    letter-spacing: 0.3px;
  }
  
  .ai-product-carousel__see-all-{{ ai_gen_id }}:hover {
    color: rgba(255, 255, 255, 0.9);
    transform: translateY(-1px);
  }

  /* Navigation */
  .ai-product-carousel__navigation-{{ ai_gen_id }} {
    position: absolute; 
    top: 50%; 
    transform: translateY(-50%);
    width: 50px; 
    height: 50px;
    background: {{ block.settings.heading_color | default: '#ffffff' | color_modify: 'alpha', 0.9 }};
    border: 2px solid {{ block.settings.heading_color | default: '#ffffff' | color_modify: 'alpha', 0.2 }};
    border-radius: 50%;
    color: {{ block.settings.background_color | default: '#000000' }};
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    display: flex; 
    align-items: center; 
    justify-content: center;
    z-index: 200;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    box-shadow: 0 4px 20px {{ block.settings.background_color | default: '#000000' | color_modify: 'alpha', 0.3 }};
  }
  .ai-product-carousel__navigation-{{ ai_gen_id }}:hover {
    background: {{ block.settings.heading_color | default: '#ffffff' }};
    border-color: {{ block.settings.heading_color | default: '#ffffff' }};
    transform: translateY(-50%) scale(1.08);
    box-shadow: 0 6px 24px {{ block.settings.background_color | default: '#000000' | color_modify: 'alpha', 0.4 }};
  }
  .ai-product-carousel__navigation-{{ ai_gen_id }}:active { 
    transform: translateY(-50%) scale(0.96); 
  }
  .ai-product-carousel__navigation-{{ ai_gen_id }}:disabled { 
    opacity: .4; 
    cursor: not-allowed; 
    transform: translateY(-50%) scale(.92); 
  }
  .ai-product-carousel__navigation--prev-{{ ai_gen_id }} { 
    left: 20px; 
  }
  .ai-product-carousel__navigation--next-{{ ai_gen_id }} { 
    right: 20px; 
  }
  .ai-product-carousel__navigation-{{ ai_gen_id }} svg { 
    width: 20px; 
    height: 20px; 
    stroke-width: 2.5; 
  }

  .ai-product-carousel__pagination-{{ ai_gen_id }} { 
    display: flex; 
    justify-content: center; 
    gap: 8px; 
    margin-top: 36px; 
  }
  .ai-product-carousel__dot-{{ ai_gen_id }} {
    width: 8px; 
    height: 8px; 
    border-radius: 50%;
    background-color: {{ block.settings.heading_color | default: '#ffffff' | color_modify: 'alpha', 0.25 }};
    border: none; 
    cursor: pointer; 
    transition: all .3s; 
    padding: 0; 
    outline: none;
  }
  .ai-product-carousel__dot-{{ ai_gen_id }}.active { 
    background-color: {{ block.settings.heading_color | default: '#ffffff' }}; 
  }

  /* Responsive tweaks */
  @media (max-width: 1200px){
    .ai-product-carousel__container-{{ ai_gen_id }} { 
      padding: 0 16px; 
    }
    .ai-product-carousel__track-container-{{ ai_gen_id }} { 
      margin: 0 60px; 
    }
    .ai-product-carousel__track-{{ ai_gen_id }} { 
      padding: 0 15px; 
    }
    .ai-product-carousel__navigation--prev-{{ ai_gen_id }} { 
      left: 8px; 
    }
    .ai-product-carousel__navigation--next-{{ ai_gen_id }} { 
      right: 8px; 
    }
  }

  @media (max-width: 768px){
    .ai-product-carousel-{{ ai_gen_id }}{
      padding-top: {{ block.settings.section_padding_top | default: 80 | times: 0.6 | round }}px;
      padding-bottom: {{ block.settings.section_padding | default: 60 | times: 0.6 | round }}px;
    }
    .ai-product-carousel__container-{{ ai_gen_id }} { 
      padding: 0 12px; 
    }
    .ai-product-carousel__heading-{{ ai_gen_id }} { 
      margin-bottom: {{ block.settings.heading_spacing | default: 48 | times: 0.67 | round }}px; 
    }
    .ai-product-carousel__wrapper-{{ ai_gen_id }} { 
      padding: 16px 0 28px 0; 
    }

    .ai-product-carousel__track-container-{{ ai_gen_id }}{
      margin: 0;
      overflow-x: auto; 
      overflow-y: hidden;
      scroll-snap-type: x mandatory;
      scrollbar-width: none; 
      -ms-overflow-style: none; 
      border-radius: 16px;
      overscroll-behavior-x: contain;
    }
    .ai-product-carousel__track-container-{{ ai_gen_id }}::-webkit-scrollbar { 
      display: none; 
    }

    .ai-product-carousel__track-{{ ai_gen_id }}{
      gap: 16px;
      padding: 0;
    }
    .ai-product-carousel__track-{{ ai_gen_id }}::before,
    .ai-product-carousel__track-{{ ai_gen_id }}::after{
      content:''; 
      flex: 0 0 12px;
    }

    .ai-product-carousel__card-{{ ai_gen_id }}{
      width: clamp(280px, calc(100vw - 32px), 320px);
      min-width: clamp(280px, calc(100vw - 32px), 320px);
      height: 520px;
      scroll-snap-align: start;
      scroll-snap-stop: always;
      transform: translateZ(0);
    }

    .ai-product-carousel__card-media-{{ ai_gen_id }} { 
      height: 280px; 
      padding: 20px; 
    }
    .ai-product-carousel__card-content-{{ ai_gen_id }} { 
      padding: 20px 16px 16px; 
    }
    .ai-product-carousel__product-name-{{ ai_gen_id }} { 
      font-size: 18px;
      padding-right: 75px;
      margin-bottom: 14px;
    }
    .ai-product-carousel__door-classification-{{ ai_gen_id }} {
      top: 20px;
      right: 16px;
      font-size: 10px;
      padding: 5px 10px;
    }
    .ai-product-carousel__price-{{ ai_gen_id }} { 
      font-size: 22px;
      margin-bottom: 18px;
    }
    .ai-product-carousel__button-group-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 10px;
    }
    .ai-pc-glass-btn-{{ ai_gen_id }},
    .ai-product-carousel__buy-now-btn-{{ ai_gen_id }} {
      width: 100%;
      flex: none;
    }

    .ai-product-carousel__navigation-{{ ai_gen_id }} { 
      display: none; 
    }
    .ai-product-carousel__pagination-{{ ai_gen_id }} { 
      gap: 6px; 
      margin-top: 28px; 
    }
    .ai-product-carousel__dot-{{ ai_gen_id }} { 
      width: 6px; 
      height: 6px; 
    }
  }

  @media (max-width: 480px){
    .ai-product-carousel__card-{{ ai_gen_id }}{
      width: calc(100vw - 24px);
      min-width: calc(100vw - 24px);
      height: 460px;
    }
    .ai-product-carousel__card-media-{{ ai_gen_id }} { 
      height: 220px; 
      padding: 14px; 
    }
    .ai-product-carousel__card-content-{{ ai_gen_id }} { 
      padding: 18px 14px 14px; 
      gap: 12px;
    }
    .ai-product-carousel__product-name-{{ ai_gen_id }} { 
      font-size: 15px; 
    }
    .ai-product-carousel__price-{{ ai_gen_id }} { 
      font-size: 17px; 
    }
  }

  @media (prefers-reduced-motion: reduce){
    .ai-product-carousel__card-{{ ai_gen_id }},
    .ai-product-carousel__card-media-{{ ai_gen_id }} img,
    .ai-product-carousel__card-placeholder-{{ ai_gen_id }},
    .ai-product-carousel__navigation-{{ ai_gen_id }},
    .ai-product-carousel__track-{{ ai_gen_id }},
    .ai-product-carousel__dot-{{ ai_gen_id }} { 
      transition: none; 
    }
    .ai-product-carousel__card-{{ ai_gen_id }}:hover,
    .ai-product-carousel__card-{{ ai_gen_id }}:hover .ai-product-carousel__card-media-{{ ai_gen_id }} img,
    .ai-product-carousel__card-{{ ai_gen_id }}:hover .ai-product-carousel__card-placeholder-{{ ai_gen_id }} { 
      transform: none; 
    }
  }
{% endstyle %}

<product-carousel-{{ ai_gen_id }}
  class="ai-product-carousel-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
  data-cards-per-view="{{ block.settings.cards_per_view_desktop | default: 3 }}"
  data-auto-play="{{ block.settings.enable_autoplay }}"
  data-auto-play-speed="{{ block.settings.autoplay_speed | default: 5000 }}"
>
  <div class="ai-product-carousel__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-product-carousel__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% assign collection_handle = block.settings.product_collection %}
    {% assign products_to_show = collections[collection_handle].products | limit: 8 %}

    {% if products_to_show.size > 0 %}
      <div class="ai-product-carousel__wrapper-{{ ai_gen_id }}">
        <div class="ai-product-carousel__track-container-{{ ai_gen_id }}">
          <div class="ai-product-carousel__track-{{ ai_gen_id }}" role="region" aria-label="Product carousel">
            {% for product in products_to_show %}
              <div class="ai-product-carousel__card-{{ ai_gen_id }}" data-product-id="{{ product.id }}">
                <div class="ai-product-carousel__card-media-{{ ai_gen_id }}">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 600 }}"
                      alt="{{ product.featured_image.alt | default: product.title | escape }}"
                      loading="lazy"
                      width="600"
                      height="400"
                    >
                  {% else %}
                    <div class="ai-product-carousel__card-placeholder-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>

                <div class="ai-product-carousel__card-content-{{ ai_gen_id }}">
                  {% assign door_classification = product.metafields.custom.door_type.value | default: product.metafields.custom.door_classification.value %}
                  {% if door_classification != blank %}
                    <span class="ai-product-carousel__door-classification-{{ ai_gen_id }}">
                      {{ door_classification | replace: '-', ' ' | upcase }}
                    </span>
                  {% else %}
                    <span class="ai-product-carousel__door-classification-{{ ai_gen_id }}">
                      DOOR CLASSIFICATION
                    </span>
                  {% endif %}

                  <h3 class="ai-product-carousel__product-name-{{ ai_gen_id }}">{{ product.title }}</h3>

                  <div class="ai-product-carousel__price-{{ ai_gen_id }}">
                    {% if product.compare_at_price > product.price %}
                      <span style="text-decoration: line-through; opacity: 0.7; font-size: 14px;">{{ product.compare_at_price | money }}</span>
                    {% endif %}
                    {{ product.price | money }}
                  </div>

                  <div class="ai-product-carousel__button-group-{{ ai_gen_id }}">
                    <form action="/cart/add" method="post" enctype="multipart/form-data" class="product-form">
                      <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                      <button
                        type="submit"
                        name="add"
                        class="ai-pc-glass-btn-{{ ai_gen_id }}"
                        {% unless product.available %}disabled{% endunless %}
                      >
                        {% if product.available %}Add to Cart{% else %}Sold Out{% endif %}
                      </button>
                    </form>

                    <a href="{{ product.url }}" class="ai-product-carousel__buy-now-btn-{{ ai_gen_id }}">Buy Now</a>
                    
                    <a href="{{ collections[collection_handle].url | default: '/collections/all' }}" class="ai-product-carousel__see-all-{{ ai_gen_id }}">
                      See all products
                    </a>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>

        <button
          class="ai-product-carousel__navigation-{{ ai_gen_id }} ai-product-carousel__navigation--prev-{{ ai_gen_id }}"
          aria-label="Previous slide"
          type="button"
        >
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M15 18L9 12L15 6"/>
          </svg>
        </button>

        <button
          class="ai-product-carousel__navigation-{{ ai_gen_id }} ai-product-carousel__navigation--next-{{ ai_gen_id }}"
          aria-label="Next slide"
          type="button"
        >
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 18L15 12L9 6"/>
          </svg>
        </button>

        <div class="ai-product-carousel__pagination-{{ ai_gen_id }}" role="tablist" aria-label="Carousel pagination"></div>
      </div>
    {% else %}
      <div class="ai-product-carousel__empty-state-{{ ai_gen_id }}">
        <h3 class="ai-product-carousel__empty-title-{{ ai_gen_id }}">No products found</h3>
        <p class="ai-product-carousel__empty-text-{{ ai_gen_id }}">Please select a collection in the theme editor</p>
      </div>
    {% endif %}
  </div>
</product-carousel-{{ ai_gen_id }}>

<script>
(function() {
  class ProductCarousel{{ ai_gen_id }} extends HTMLElement {
    constructor() {
      super();
      this.currentSlide = 0;
      this.isDesktop = window.innerWidth >= 768;
      this.cardsPerView = this.isDesktop ? (parseInt(this.dataset.cardsPerView) || 3) : 1;
      this.isTransitioning = false;
      this.totalCards = 0;
      this.autoPlayEnabled = this.dataset.autoPlay === 'true' || this.dataset.autoPlay === '1';
      this.autoPlaySpeed = parseInt(this.dataset.autoPlaySpeed) || 5000;
      this.autoPlayInterval = null;
      this.totalSlides = 0;
    }

    connectedCallback() {
      this.track = this.querySelector('.ai-product-carousel__track-{{ ai_gen_id }}');
      this.trackContainer = this.querySelector('.ai-product-carousel__track-container-{{ ai_gen_id }}');
      this.cards = this.querySelectorAll('.ai-product-carousel__card-{{ ai_gen_id }}');
      this.prevBtn = this.querySelector('.ai-product-carousel__navigation--prev-{{ ai_gen_id }}');
      this.nextBtn = this.querySelector('.ai-product-carousel__navigation--next-{{ ai_gen_id }}');
      this.pagination = this.querySelector('.ai-product-carousel__pagination-{{ ai_gen_id }}');

      this.totalCards = this.cards.length;
      if (this.totalCards === 0) return;

      this.calculateSlides();
      this.setupPagination();
      this.setupEventListeners();
      this.setupTouchSupport();
      this.setupKeyboardNavigation();
      this.updateNavigation();
      this.setupAutoPlay();

      setTimeout(() => this.goToSlide(0), 100);
    }

    calculateSlides() {
      this.totalSlides = Math.ceil(this.totalCards / this.cardsPerView);
    }

    setupPagination() {
      this.pagination.innerHTML = '';
      for (let i = 0; i < this.totalSlides; i++) {
        const dot = document.createElement('button');
        dot.className = `ai-product-carousel__dot-{{ ai_gen_id }}${i === 0 ? ' active' : ''}`;
        dot.setAttribute('aria-label', `Go to slide ${i + 1}`);
        dot.setAttribute('role', 'tab');
        dot.addEventListener('click', () => this.goToSlide(i));
        this.pagination.appendChild(dot);
      }
    }

    setupEventListeners() {
      this.prevBtn?.addEventListener('click', (e) => { e.preventDefault(); this.prevSlide(); });
      this.nextBtn?.addEventListener('click', (e) => { e.preventDefault(); this.nextSlide(); });

      this.querySelectorAll('.product-form').forEach(form => {
        form.addEventListener('submit', (e) => { e.stopPropagation(); });
      });

      this.querySelectorAll('.ai-product-carousel__buy-now-btn-{{ ai_gen_id }}').forEach(link => {
        link.addEventListener('click', (e) => { e.stopPropagation(); });
      });

      let resizeTimeout;
      window.addEventListener('resize', () => {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(() => {
          const wasDesktop = this.isDesktop;
          this.isDesktop = window.innerWidth >= 768;
          const newCardsPerView = this.isDesktop ? (parseInt(this.dataset.cardsPerView) || 3) : 1;

          if (wasDesktop !== this.isDesktop || newCardsPerView !== this.cardsPerView) {
            this.cardsPerView = newCardsPerView;
            this.currentSlide = 0;
            this.calculateSlides();
            this.setupPagination();
            this.updateNavigation();
            this.goToSlide(0);
          }
        }, 250);
      });
    }

    setupTouchSupport() {
      let startX = 0, currentX = 0, isDragging = false, startTime = 0;

      this.trackContainer.addEventListener('touchstart', (e) => {
        startX = e.touches[0].clientX;
        startTime = Date.now();
        isDragging = true;
        this.pauseAutoPlay();
      }, { passive: true });

      this.trackContainer.addEventListener('touchmove', (e) => {
        if (!isDragging) return;
        currentX = e.touches[0].clientX;
      }, { passive: true });

      this.trackContainer.addEventListener('touchend', () => {
        if (!isDragging) return;
        isDragging = false;

        const diff = startX - currentX;
        const timeDiff = Date.now() - startTime;
        const threshold = 50;
        const speed = Math.abs(diff) / timeDiff;

        if (Math.abs(diff) > threshold || speed > 0.5) {
          if (diff > 0) this.nextSlide();
          else this.prevSlide();
        }
        this.resumeAutoPlay();
      }, { passive: true });
    }

    setupKeyboardNavigation() {
      this.addEventListener('keydown', (e) => {
        if (e.key === 'ArrowLeft') { e.preventDefault(); this.prevSlide(); }
        else if (e.key === 'ArrowRight') { e.preventDefault(); this.nextSlide(); }
      });
      this.setAttribute('tabindex', '0');
    }

    setupAutoPlay() {
      if (!this.autoPlayEnabled || !this.dataset.autoPlay) return;
      this.addEventListener('mouseenter', () => this.pauseAutoPlay());
      this.addEventListener('mouseleave', () => this.resumeAutoPlay());
      this.resumeAutoPlay();
    }

    pauseAutoPlay() {
      if (this.autoPlayInterval) { clearInterval(this.autoPlayInterval); this.autoPlayInterval = null; }
    }

    resumeAutoPlay() {
      if (!this.autoPlayEnabled || !this.dataset.autoPlay) return;
      this.pauseAutoPlay();
      this.autoPlayInterval = setInterval(() => { this.nextSlide(); }, this.autoPlaySpeed);
    }

    goToSlide(index) {
      if (this.isTransitioning || this.totalCards === 0) return;
      this.currentSlide = Math.max(0, Math.min(index, this.totalSlides - 1));
      this.isTransitioning = true;

      if (this.isDesktop) {
        const firstCard = this.cards[0];
        if (firstCard) {
          const cardWidth = firstCard.offsetWidth;
          const gap = 20;
          const cardIndex = this.currentSlide * this.cardsPerView;
          const offset = cardIndex * (cardWidth + gap);
          this.track.style.transform = `translateX(-${offset}px)`;
        }
      } else {
        const cardWidth = this.cards[0].offsetWidth;
        const gap = 16;
        const offset = this.currentSlide * (cardWidth + gap);
        this.trackContainer.scrollTo({ left: offset, behavior: 'smooth' });
      }

      setTimeout(() => { this.isTransitioning = false; }, 600);
      this.updateNavigation();
    }

    prevSlide() { this.goToSlide(Math.max(0, this.currentSlide - 1)); }
    nextSlide() { this.goToSlide(Math.min(this.totalSlides - 1, this.currentSlide + 1)); }

    updateNavigation() {
      if (this.prevBtn) this.prevBtn.disabled = this.currentSlide <= 0;
      if (this.nextBtn) this.nextBtn.disabled = this.currentSlide >= this.totalSlides - 1;

      this.querySelectorAll('.ai-product-carousel__dot-{{ ai_gen_id }}').forEach((dot, index) => {
        dot.classList.toggle('active', index === this.currentSlide);
        dot.setAttribute('aria-selected', index === this.currentSlide);
      });
    }

    disconnectedCallback() { this.pauseAutoPlay(); }
  }

  customElements.define('product-carousel-{{ ai_gen_id }}', ProductCarousel{{ ai_gen_id }});
})();
</script>

