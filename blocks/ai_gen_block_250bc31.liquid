{% doc %}
  @prompt
    Create a horizontal scrolling card section with dark theme styling. Each card can display either an image or video, has a title and subtitle, and the entire card is clickable. Mobile shows 1 card per view with scroll snap, desktop shows 3 cards. Include theme editor settings for heading, max width, padding, background color, and repeatable card blocks with media type selection, image/video upload, title, subtitle, link URL, and optional CTA label. Use minimal implementation with native scroll, rounded corners, subtle borders, hover shadows, and SF Pro typography.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-card-section-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
  }

  .ai-card-section-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-card-section-heading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', system-ui, sans-serif;
    font-size: 32px;
    font-weight: 600;
    margin: 0 0 32px;
    text-align: center;
  }

  .ai-card-section-scroll-{{ ai_gen_id }} {
    display: flex;
    gap: 24px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    padding: 0 0 16px;
  }

  .ai-card-section-scroll-{{ ai_gen_id }}::-webkit-scrollbar {
    height: 6px;
  }

  .ai-card-section-scroll-{{ ai_gen_id }}::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 3px;
  }

  .ai-card-section-scroll-{{ ai_gen_id }}::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.3);
    border-radius: 3px;
  }

  .ai-card-section-scroll-{{ ai_gen_id }}::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.5);
  }

  .ai-card-section-card-{{ ai_gen_id }} {
    flex: 0 0 calc(100% - 40px);
    background: {{ block.settings.card_background }};
    border: 1px solid {{ block.settings.card_border_color }};
    border-radius: 16px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    scroll-snap-align: start;
    transition: all 0.3s ease;
    display: block;
  }

  .ai-card-section-card-{{ ai_gen_id }}:hover {
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    transform: translateY(-4px);
  }

  .ai-card-section-media-{{ ai_gen_id }} {
    width: 100%;
    height: 200px;
    position: relative;
    overflow: hidden;
  }

  .ai-card-section-media-{{ ai_gen_id }} img,
  .ai-card-section-media-{{ ai_gen_id }} video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-card-section-media-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.05);
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(255, 255, 255, 0.4);
  }

  .ai-card-section-media-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.4;
  }

  .ai-card-section-content-{{ ai_gen_id }} {
    padding: 24px;
  }

  .ai-card-section-title-{{ ai_gen_id }} {
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', system-ui, sans-serif;
    font-size: 20px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0 0 8px;
    line-height: 1.3;
  }

  .ai-card-section-subtitle-{{ ai_gen_id }} {
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', system-ui, sans-serif;
    font-size: 16px;
    font-weight: 400;
    color: {{ block.settings.subtitle_color }};
    margin: 0 0 16px;
    line-height: 1.4;
  }

  .ai-card-section-cta-{{ ai_gen_id }} {
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', system-ui, sans-serif;
    font-size: 14px;
    font-weight: 500;
    color: {{ block.settings.cta_color }};
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  @media screen and (min-width: 768px) {
    .ai-card-section-card-{{ ai_gen_id }} {
      flex: 0 0 calc(33.333% - 16px);
    }

    .ai-card-section-media-{{ ai_gen_id }} {
      height: 240px;
    }

    .ai-card-section-heading-{{ ai_gen_id }} {
      font-size: 40px;
      margin-bottom: 48px;
    }
  }
{% endstyle %}

<div class="ai-card-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-card-section-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-card-section-heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    <div class="ai-card-section-scroll-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign media_type_key = 'card_' | append: i | append: '_media_type'
          assign image_key = 'card_' | append: i | append: '_image'
          assign video_key = 'card_' | append: i | append: '_video'
          assign title_key = 'card_' | append: i | append: '_title'
          assign subtitle_key = 'card_' | append: i | append: '_subtitle'
          assign link_key = 'card_' | append: i | append: '_link'
          assign cta_key = 'card_' | append: i | append: '_cta'

          assign media_type = block.settings[media_type_key]
          assign card_image = block.settings[image_key]
          assign card_video = block.settings[video_key]
          assign card_title = block.settings[title_key]
          assign card_subtitle = block.settings[subtitle_key]
          assign card_link = block.settings[link_key]
          assign card_cta = block.settings[cta_key]
        %}

        {% if card_title != blank or card_image != blank or card_video != blank %}<a href="{{ card_link | default: '#' }}" class="ai-card-section-card-{{ ai_gen_id }}">
            <div class="ai-card-section-media-{{ ai_gen_id }}">
              {% if media_type == 'video' and card_video != blank %}
                <video autoplay muted loop playsinline>
                  <source src="{{ card_video }}" type="video/mp4">
                </video>
              {% elsif media_type == 'image' and card_image != blank %}
                <img
                  src="{{ card_image | image_url: width: 600 }}"
                  alt="{{ card_image.alt | escape }}"
                  loading="lazy"
                  width="600"
                  height="400"
                >
              {% else %}
                <div class="ai-card-section-media-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-card-section-content-{{ ai_gen_id }}">
              {% if card_title != blank %}
                <h3 class="ai-card-section-title-{{ ai_gen_id }}">
                  {{ card_title }}
                </h3>
              {% endif %}

              {% if card_subtitle != blank %}
                <p class="ai-card-section-subtitle-{{ ai_gen_id }}">
                  {{ card_subtitle }}
                </p>
              {% endif %}

              {% if card_cta != blank %}
                <div class="ai-card-section-cta-{{ ai_gen_id }}">
                  {{ card_cta }}
                </div>
              {% endif %}
            </div>
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

