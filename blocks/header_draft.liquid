<script id="broen-unblur-script-v6">
(function(){
  const DETAILS = 'details.menu-drawer-container';
  const $$ = s => Array.from(document.querySelectorAll(s));

  let navAway = false, navAwayTimer = 0;
  const markNavAway = () => { navAway = true; clearTimeout(navAwayTimer); navAwayTimer = setTimeout(()=>navAway=false, 2000); };

  function unblurNow(){
    document.body.classList.remove('is-drawer-open');
    document.documentElement.classList.add('broen-no-anim','broen-unblur-now');
    const targets = $$('#MainContent, .shopify-section-group-main, .shopify-section:not(.section-header)');
    for (const el of targets){ el.style.filter='none'; el.style.transition='none'; void el.offsetHeight; }
    requestAnimationFrame(()=>requestAnimationFrame(()=>{
      for (const el of targets){ el.style.removeProperty('filter'); el.style.removeProperty('transition'); }
      document.documentElement.classList.remove('broen-no-anim','broen-unblur-now');
    }));
  }

  function syncIsOpen(){
    const open = $$(DETAILS).some(d => d.hasAttribute('open'));
    if (open) document.body.classList.add('is-drawer-open');
    else if (!navAway) unblurNow();
  }

  function shouldUnblurForLink(a){
    if (!a) return true;
    const href = (a.getAttribute('href')||'').trim();
    const target = (a.getAttribute('target')||'').toLowerCase();
    if (target && target !== '_self') return true;
    if (!href) return true;
    const lc = href.toLowerCase();
    if (lc.startsWith('mailto:') || lc.startsWith('tel:') || lc.startsWith('javascript:')) return true;
    let url; try { url = new URL(href, location.href); } catch(e){ return true; }
    if (url.origin === location.origin && url.pathname === location.pathname && url.hash) return true;
    return false;
  }

  function onPointer(e){
    if (!document.body.classList.contains('is-drawer-open')) return;
    const t = e.target;
    const link = t.closest('.menu-drawer a[href]');
    if (link){
      if (shouldUnblurForLink(link)) { unblurNow(); }
      else { markNavAway(); }
      return;
    }
    if (t.closest('.menu-drawer__overlay')
     || t.closest('.menu-drawer__close-button')
     || t.closest(DETAILS + ' > summary')) { unblurNow(); }
  }

  document.addEventListener('pointerdown', onPointer, true);
  document.addEventListener('touchstart',  onPointer, true);
  document.addEventListener('keyup', e => { if (e.key === 'Escape') unblurNow(); }, true);

  document.addEventListener('toggle', e => { if (e.target.matches(DETAILS)) syncIsOpen(); }, true);
  const mo = new MutationObserver(syncIsOpen);
  $$(DETAILS).forEach(d => mo.observe(d, { attributes:true, attributeFilter:['open'] }));

  document.addEventListener('shopify:section:load', syncIsOpen);
  document.addEventListener('DOMContentLoaded',      syncIsOpen);
  window.addEventListener('load',                    syncIsOpen);
  window.addEventListener('pageshow',                syncIsOpen);
})();
</script>


