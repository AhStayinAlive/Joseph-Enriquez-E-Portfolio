{% comment %}
  ===== WHITE HEADER PAGES =====
{% endcomment %}

{% if request.page_type == 'collection' or request.page_type == 'product' or request.page_type == 'cart' or request.page_type == 'checkout' %}
  <style>
    .section-header{
      --glass-blur: 20px;
      --glass-saturate: 180%;
      /* Lighter alphas = more see-through */
      --glass-bg: rgba(255,255,255,.22);
      --glass-bg-strong: rgba(255,255,255,.30);
      --glass-bg-scrolled: rgba(255,255,255,.36);
      --glass-border: rgba(0,0,0,.10);
      --glass-highlight: rgba(255,255,255,.60);
      --glass-shadow: rgba(0,0,0,.10);
    }

    /* Nuke any solid backgrounds inside the header so frost shows through */
    .section-header .header,
    .section-header .header .page-width,
    .section-header .header .header__menu,
    .section-header .header .header__heading,
    .section-header .header .header__icons{
      background: transparent !important;
      background-image: none !important;
    }

    /* Frosted, semi-transparent wrapper */
    .section-header .header-wrapper,
    .section-header .header-wrapper.gradient{
      background: var(--glass-bg) !important;
      background-image: none !important;
      -webkit-backdrop-filter: saturate(var(--glass-saturate)) blur(var(--glass-blur)) !important;
      backdrop-filter: saturate(var(--glass-saturate)) blur(var(--glass-blur)) !important;
      border-bottom: 1px solid var(--glass-border) !important;
      box-shadow: 0 8px 24px var(--glass-shadow) !important;
      position: relative;
      isolation: isolate;
      background-clip: padding-box;
      will-change: backdrop-filter, background-color;
      transition: background .2s ease, box-shadow .2s ease, transform .2s ease;
    }

    /* Subtle inner highlight without making it opaque */
    .section-header .header-wrapper::after{
      content:"";
      position:absolute; inset:0; pointer-events:none;
      border-radius: inherit;
      box-shadow: inset 0 .5px 0 var(--glass-highlight), inset 0 -1px 0 rgba(0,0,0,.10);
      opacity:.85;
    }

    /* More opacity when scrolled for readability */
    .scrolled-past-header .header-wrapper{
      background: var(--glass-bg-scrolled) !important;
      border-bottom-color: rgba(0,0,0,.14) !important;
      box-shadow: 0 10px 28px var(--glass-shadow) !important;
    }

    /* Hover lift stays subtle; still frosty */
    .section-header .header-wrapper:hover{
      background: var(--glass-bg-strong) !important;
      box-shadow: 0 12px 36px rgba(0,0,0,.18) !important;
      transform: translateY(-1px);
    }

    /* Black text/icons on frosted white */
    .section-header .header,
    .section-header .header *:not(.cart-count-bubble){
      color:#000 !important;
      fill:#000 !important;
      stroke:#000 !important;
    }
    .header__heading-logo img{ filter:brightness(0); }

    /* Drawer keeps a touch more opacity for contrast */
    .menu-drawer,
    .menu-drawer__inner-container,
    .menu-drawer__navigation,
    .menu-drawer__submenu,
    .menu-drawer__utility-links,
    .menu-drawer .gradient{
      background: var(--glass-bg-strong) !important;
      color:#000 !important;
      -webkit-backdrop-filter: saturate(var(--glass-saturate)) blur(var(--glass-blur));
      backdrop-filter: saturate(var(--glass-saturate)) blur(var(--glass-blur));
      box-shadow: inset 0 .5px 0 var(--glass-highlight), 0 8px 28px var(--glass-shadow);
    }

    /* Country selector pill matches frost */
    .section-header .localization-form__select{
      background: var(--glass-bg-strong) !important;
      color:#000 !important;
      border:1px solid var(--glass-border) !important;
      border-radius: 8px !important;
      box-shadow: inset 0 .5px 0 var(--glass-highlight), 0 8px 20px var(--glass-shadow) !important;
      -webkit-backdrop-filter: saturate(var(--glass-saturate)) blur(var(--glass-blur));
      backdrop-filter: saturate(var(--glass-saturate)) blur(var(--glass-blur));
      transition: background .15s ease, box-shadow .15s ease, transform .15s ease;
    }
    .section-header .localization-form__select:hover{
      background: rgba(255,255,255,.98) !important;
      box-shadow: inset 0 .5px 0 var(--glass-highlight), 0 12px 28px rgba(0,0,0,.28) !important;
      transform: translateY(-1px);
    }
    .section-header .localization-form__select .icon-caret{ color:#000 !important; fill:currentColor !important; }

    /* Dropdown matches frost */
    .section-header .disclosure__list-wrapper{
      background: var(--glass-bg-strong) !important;
      border: 1px solid var(--glass-border) !important;
      border-radius: 10px !important;
      box-shadow: inset 0 .5px 0 var(--glass-highlight), 0 10px 32px var(--glass-shadow) !important;
      padding: 6px !important;
      -webkit-backdrop-filter: saturate(var(--glass-saturate)) blur(var(--glass-blur));
      backdrop-filter: saturate(var(--glass-saturate)) blur(var(--glass-blur));
      z-index: 1000 !important;
    }
    .section-header .disclosure__link{ color:#000 !important; transition: background .12s ease; }
    .section-header .disclosure__link:hover{ background: rgba(0,0,0,.08) !important; border-radius: 6px; }
    .section-header .disclosure__link[aria-current="true"]{
      text-decoration: underline;
      background: rgba(0,0,0,.12) !important;
      border-radius: 6px;
    }

    /* Make the next section sit under the header on white pages too (so blur works) */
    .section-header + .shopify-section{
      position: relative;
      z-index: 0;
      margin-top: calc(-1 * var(--header-height));
      padding-top: var(--header-height);
    }

    /* Fallbacks for browsers without backdrop-filter */
    @supports not ((-webkit-backdrop-filter: blur(2px)) or (backdrop-filter: blur(2px))) {
      .section-header .header-wrapper,
      .section-header .header-wrapper.gradient{
        background: rgba(255,255,255,.90) !important;
        -webkit-backdrop-filter: none !important;
        backdrop-filter: none !important;
      }
      .menu-drawer, .menu-drawer__inner-container{
        background: rgba(255,255,255,.96) !important;
      }
      .section-header + .shopify-section{ margin-top: 0; padding-top: 0; }
    }

    @media (prefers-reduced-transparency: reduce){
      .section-header .header-wrapper,
      .section-header .header-wrapper.gradient{
        backdrop-filter: none !important;
        -webkit-backdrop-filter: none !important;
        background: rgba(255,255,255,.94) !important;
      }
      .menu-drawer,
      .section-header .localization-form__select,
      .section-header .disclosure__list-wrapper{
        backdrop-filter: none !important;
        -webkit-backdrop-filter: none !important;
      }
    }

    /* ----- FROST UNBLOCKER (Dawn overlays & solid backgrounds) ----- */

    /* Clear solid/gradient backgrounds applied by color schemes or wrappers */
    .section-header,
    .section-header .header,
    .section-header .header .page-width,
    .section-header .header .header__menu,
    .section-header .header .header__heading,
    .section-header .header .header__icons,
    .section-header [class*="color-"],
    .section-header .gradient {
      background: transparent !important;
      background-image: none !important;
    }

    /* Dawn’s gradient overlay uses ::before — remove so blur shows through */
    .section-header .header-wrapper.gradient::before,
    .section-header .header-wrapper::before,
    .section-header .header::before,
    .section-header .header::after {
      content: none !important;
      display: none !important;
      background: transparent !important;
    }

    /* Ensure the frosted layer owns the blur */
    .section-header .header-wrapper,
    .section-header .header-wrapper.gradient {
      -webkit-backdrop-filter: saturate(var(--glass-saturate)) blur(var(--glass-blur)) !important;
      backdrop-filter: saturate(var(--glass-saturate)) blur(var(--glass-blur)) !important;
      background: var(--glass-bg) !important;            /* must be semi-transparent */
      background-image: none !important;
      background-clip: padding-box;
      isolation: isolate;
      transform: translateZ(0);
      will-change: backdrop-filter, background-color;
    }

    /* Keep the menu drawer translucent as well */
    .section-header .menu-drawer,
    .section-header .menu-drawer__inner-container,
    .section-header .menu-drawer__navigation,
    .section-header .menu-drawer__submenu,
    .section-header .menu-drawer__utility-links,
    .section-header .menu-drawer .gradient {
      background: var(--glass-bg-strong) !important;
      background-image: none !important;
      -webkit-backdrop-filter: saturate(var(--glass-saturate)) blur(var(--glass-blur)) !important;
      backdrop-filter: saturate(var(--glass-saturate)) blur(var(--glass-blur)) !important;
    }
  </style>
{% endif %}

