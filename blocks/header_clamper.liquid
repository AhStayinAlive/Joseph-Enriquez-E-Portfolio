{%- style -%}
  .header {
    padding: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px 3rem
             {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px 3rem;
  }
  .section-header {
    position: sticky; top: 0; z-index: 100;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-header { margin-bottom: {{ section.settings.margin_bottom }}px; }
  }
  @media screen and (min-width: 990px) {
    .header {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Default frosted header only for NON-white pages */
  body:not(.template-collection):not(.template-product):not(.template-cart):not(.template-checkout)
  .header-wrapper{
    --hdr-blur:20px; --hdr-saturate:180%;
    --hdr-bg:hsla(0,0%,100%,.08);
    --hdr-bg-scrolled:hsla(0,0%,100%,.12);
    --hdr-border:hsla(0,0%,100%,.24);

    background:var(--hdr-bg) !important;
    -webkit-backdrop-filter:saturate(var(--hdr-saturate)) blur(var(--hdr-blur));
    backdrop-filter:saturate(var(--hdr-saturate)) blur(var(--hdr-blur));
    border-bottom:1px solid var(--hdr-border);
    box-shadow:0 8px 20px rgba(0,0,0,.12);
  }

  body:not(.template-collection):not(.template-product):not(.template-cart):not(.template-checkout)
  .scrolled-past-header .header-wrapper{
    background:var(--hdr-bg-scrolled)!important;
    border-bottom-color:hsla(0,0%,100%,.26);
    box-shadow:0 10px 24px rgba(0,0,0,.16);
  }

  body:not(.template-collection):not(.template-product):not(.template-cart):not(.template-checkout)
  .header-wrapper--border-bottom{ border-bottom-color: var(--hdr-border); }

  /* Make the next section sit behind the header so blur has something to sample */
  .section-header + .shopify-section{
    position: relative; z-index: 0;
    margin-top: calc(-1 * var(--header-height));
    padding-top: var(--header-height);
  }

  /* Non-support fallback: cancel the overlap if blur isn't supported */
  @supports not ((-webkit-backdrop-filter: blur(2px)) or (backdrop-filter: blur(2px))) {
    .header-wrapper{
      background:rgba(255,255,255,.88)!important;
      -webkit-backdrop-filter:none; backdrop-filter:none;
    }
    .section-header + .shopify-section{ margin-top: 0; padding-top: 0; }
  }
{%- endstyle -%}


